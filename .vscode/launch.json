{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug AmzScraper",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "HEADLESS": "false"
      }
    },
    {
      "name": "Debug AmzScraper with Playwright Inspector",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "PWDEBUG": "1",
        "HEADLESS": "false"
      }
    }
  ]
}
